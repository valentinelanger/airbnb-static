  <body>

    <!-- Your banner code -->
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('images/background.jpg');">
      <div class="banner-content">
        <h1>Welcome Home</h1>
        <p>Rent unique places to stay from local hosts in 190+ countries.</p>

      <form class="form-inline">
          <input type="text" class="form-control input-lg datepicker" placeholder="checkin date">
          <input type="text" class="form-control input-lg datepicker"  placeholder="checkout date">
        <select class="form-control input-lg">
          <option value="1">1 guest</option>
          <option value="2">2 guests</option>
          <option value="3">3 guests</option>
          <option value="3">4 guests</option>
          <option value="3">5 guests</option>
          <option value="3">6 or + guests</option>
        </select>

        <button type="submit" class="btn btn-primary input-lg">Search</button>
      </form>

      </div>
    </div>

    <!-- Your features code -->
    <div class="container text-center">
      <div class="icons">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "travel.png", alt: "glasses", class: "card-icon" %>
            <h3>Discover the world</h3>
            <p>The earth is your new home.</p>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "payment.png", alt: "glasses", class: "card-icon" %>
            <h3>Pay online</h3>
            <p>No cash issues anymore.</p>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "turtle.png", alt: "turtle", class: "card-icon" %>
            <h3>Meet people</h3>
            <p>Discover new culture and lifestyle.</p>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "love.png", alt: "love", class: "card-icon" %>
            <h3>Share and love</h3>
            <p>Join a community you will love.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Your cards code -->
    <div class="wrapper">

      <div class="container text-center">
      <h2>Your next trip</h2>

        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <!-- insert <div class="card"> -->
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
              <div class="card-category">Paris</div>
              <div class="card-description">
                <h2>Anne's home</h2>
                <p>Paris' architecture is amazing</p>
              </div>
              <%= image_tag "anne.jpg", alt: "photo anne", class: "card-user avatar" %>
              <%= link_to "", "#", class: "card-link" %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-4">
            <!-- insert <div class="card"> -->
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">
              <div class="card-category">Brussel</div>
              <div class="card-description">
                <h2>Romain's home</h2>
                <p>Brussels is very cool</p>
              </div>
              <%= image_tag "romain.jpeg", alt: "photo romain", class: "card-user avatar" %>
              <%= link_to "", "#", class: "card-link" %>
            </div>
          </div>

          <div class="col-xs-12 col-sm-4">
            <!-- insert <div class="card"> -->
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
              <div class="card-category">London</div>
              <div class="card-description">
                <h2>Seb's home</h2>
                <p>London is crazy</p>
              </div>
              <%= image_tag "seb.jpg", alt: "photo seb", class: "card-user avatar" %>
              <%= link_to "", "#", class: "card-link" %>
            </div>
          </div>
        </div>
      </div>
    </div>


    <!-- Your newsletter code -->
    <form action="#" class="form-inline text-center">
      <div class="card-form">
        <h2>Get news from us</h2>
        <p>Leave us your mail and get amazing news</p>
        <input type="email" class="form-control" placeholder="valentine@gmail.com">
        <input type="submit" value="subscribe" class="btn btn-primary">
      </div>
    </form>

